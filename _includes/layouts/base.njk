<!doctype html>
<html lang="{{ metadata.language }}">
    <head>
<style>
  .site-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    justify-content: flex-end;
    flex: 2;
  }

  .nav-link {
    font-family: 'Departure Mono', monospace;
    text-decoration: none;
    font-size: 1.2em;
    line-height: 1.2;
    position: relative;
  }

  .nav-link:hover,
  .nav-link:focus-visible {
    text-decoration: underline;
  }

  .nav-link[aria-current="page"] {
    text-decoration: underline;
  }

  .nav-select-wrap {
    display: none;
    position: relative;
    width: 100%;
    max-width: 12rem;
    margin-left: auto;
  }


.nav-dropdown {
  display: inline-block;
  width: 100%;
  font-family: 'Departure Mono', monospace;
  font-size: 1.2em;
  padding: 0.4em 0.4em 0.4em 1em;
  border: 1px solid currentColor;
  border-radius: 4px;
  background-color: var(--nav-bg, #fff);
  color: inherit;
  cursor: pointer;
  appearance: none;
  text-decoration: none;
}

.nav-dropdown:focus-visible {
  outline: 2px solid currentColor;
  outline-offset: 2px;
}

/* caret */
.nav-caret {
  position: absolute;
  right: 0.8em;
  top: 50%;
  transform: translateY(50%);
  pointer-events: none;
  font-size: 0.9em;
  color: inherit;
}

/* light theme */
@media (prefers-color-scheme: light) {
  .nav-dropdown {
    --nav-bg: #fff;
  }
}

/* dark theme */
@media (prefers-color-scheme: dark) {
  .nav-dropdown {
    --nav-bg: #111;   /* or match your dark background */
    color: #eee;      /* readable text color */
  }
}

  @media (max-width: 600px) {
    .site-nav {
      display: none;
    }
    .nav-select-wrap {
      display: block;
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0 0 0 0);
    white-space: nowrap;
    border: 0;
  }
</style>
